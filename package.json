
{
  "name": "gto-drill-trainer",
  "version": "1.0.0",
  "description": "GTO Poker Drill Trainer Profissional",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "clean": "if exist dist rmdir /s /q dist",
    "build": "echo 'Web build skip: using root files'",
    "electron-build": "npm run clean && electron-builder --win"
  },
  "keywords": ["poker", "gto", "trainer"],
  "author": "GTO Expert",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.gtodrill.trainer",
    "productName": "GTO Drill Trainer",
    "compression": "maximum",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "publish": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "shortcutName": "GTO Drill Trainer"
    },
    "files": [
      "**/*",
      "!dist/*",
      "!node_modules/*",
      "!README.md",
      "!vercel.json",
      "!.git/*"
    ]
  }
}
